<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fx:id="mainScrollPane" fitToWidth="true" prefHeight="594.0" prefWidth="593.0" style="-fx-background-color: #E8E8E8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.frontend.controllers.HomeController">
   <content>
      <VBox spacing="20" style="-fx-padding: 10px;">
         <!-- Header Section -->
         <HBox alignment="CENTER_LEFT" style="-fx-background-color: #73FBFD; -fx-padding: 10px;">
            <children>
               <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="ANISELF LOGO" />
               <Region HBox.hgrow="ALWAYS" /> <!-- Khoảng trống giữa các nút -->
               <Button fx:id="homeButton" style="-fx-background-color: transparent;">
                  <graphic>
                     <FontIcon iconLiteral="fth-home" iconSize="24" />
                  </graphic>
               </Button>
               <Button fx:id="bookmarkButton" style="-fx-background-color: transparent;">
                  <graphic>
                     <FontIcon iconLiteral="fth-bookmark" iconSize="24" />
                  </graphic>
               </Button>
               <Button fx:id="statsButton" style="-fx-background-color: transparent;">
                  <graphic>
                     <FontIcon iconLiteral="fth-bar-chart" iconSize="24" />
                  </graphic>
               </Button>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="searchButton" style="-fx-background-color: transparent;">
                  <graphic>
                     <FontIcon iconLiteral="fth-search" iconSize="24" />
                  </graphic>
               </Button>
               <Button fx:id="notificationButton" style="-fx-background-color: transparent;">
                  <graphic>
                     <FontIcon iconLiteral="fth-bell" iconSize="24" />
                  </graphic>
               </Button>
               <Button fx:id="profileButton" style="-fx-background-radius: 50; -fx-background-color: transparent;">
                  <graphic>
                     <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true" />
                  </graphic>
               </Button>
            </children>
         </HBox>

         <!-- Filter Section -->
         <ComboBox fx:id="criteriaComboBox" prefWidth="150.0" promptText="Select Criteria" />

         <!-- Carousel Section -->
         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="leftArrowButton" onAction="#handleLeftArrow" style="-fx-background-color: transparent;">
               <graphic>
                  <FontIcon iconLiteral="fth-arrow-left" iconSize="32" />
               </graphic>
            </Button>
            <ScrollPane fx:id="carouselScrollPane" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
               <content>
                  <HBox fx:id="carouselContent" spacing="15" style="-fx-padding: 0 10px 0 10px;" />
               </content>
            </ScrollPane>
            <Button fx:id="rightArrowButton" onAction="#handleRightArrow" style="-fx-background-color: transparent;">
               <graphic>
                  <FontIcon iconLiteral="fth-arrow-right" iconSize="32" />
               </graphic>
            </Button>
         </HBox>

         <!-- Forum Section -->
         <VBox spacing="10" style="-fx-padding: 10px;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 24px;" text="FORUM" />
            <ListView fx:id="forumListView" prefHeight="300" />
         </VBox>
      </VBox>
   </content>
</ScrollPane>
