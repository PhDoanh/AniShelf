<VBox fx:id="settingBox" alignment="CENTER" prefHeight="602.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.anishelf.controller.SettingPageController">
   <children>
      <VBox alignment="CENTER" prefHeight="556.0" prefWidth="850.0" spacing="5.0" style="-fx-background-radius: 20;" >
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="10.0" />
         </VBox.margin>
         <children>
            <Label text="Chủ đề giao diện:">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <HBox fx:id="themesContainer" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <!-- Nord Light Theme -->
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Circle fill="#fafafc" onMouseClicked="#onNordLightMouseClicked" radius="32.0" stroke="#33bdf8" strokeType="INSIDE" />
                        <Label text="Nord Light" userData="nord-light" styleClass="theme-label" />
                     </children>
                  </VBox>
                  
                  <!-- Nord Dark Theme -->
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Circle fill="#2e3440" onMouseClicked="#onNordDarkMouseClicked" radius="32.0" stroke="#33bdf8" strokeType="INSIDE" />
