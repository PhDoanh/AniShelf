                     <children>
                        <Circle fill="#ffffff" onMouseClicked="#onCupertinoLightMouseClicked" radius="32.0" stroke="#33bdf8" strokeType="INSIDE" />
                        <Label text="Cupertino Light" userData="cupertino-light" styleClass="theme-label" />
