<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="avatarDropdownMenu" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
      minWidth="-Infinity" prefWidth="200.0" spacing="8.0" styleClass="avatar-dropdown-menu"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.library.anishelf.controller.AvatarDropdownMenuController">
   <children>
      <Button fx:id="personalInfoButton" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPersonalInfoButtonAction" text="Hồ sơ cá nhân">
         <graphic>
            <FontIcon iconLiteral="fth-user" iconSize="16" />
         </graphic>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </Button>
      <Button fx:id="historyButton" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onHistoryButtonAction" text="Lịch sử mượn/đặt">
         <graphic>
            <FontIcon iconLiteral="fth-clock" iconSize="16" />
         </graphic>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </Button>
      <Button fx:id="settingButton" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSettingButtonAction" text="Cài đặt">
         <graphic>
            <FontIcon iconLiteral="fth-settings" iconSize="16" />
         </graphic>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </Button>
      <Button fx:id="logoutMenuButton" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onLogoutMenuButtonAction" text="Đăng xuất">
         <graphic>
            <FontIcon iconLiteral="fth-log-out" iconSize="16" />
         </graphic>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>