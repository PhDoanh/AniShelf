<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="forumContainer" prefWidth="950.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.anishelf.controller.ForumPageController">
   <children>
      <!-- Tiêu đề trang -->
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" styleClass="page-header">
         <children>
            <Label styleClass="page-title" text="Diễn đàn" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <!-- Thanh tìm kiếm -->
               <children>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="350.0" styleClass="search-container">
                     <children>
                        <TextField fx:id="searchField" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm bài đăng..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClicked" styleClass="search-button">
                           <graphic>
                              <FontIcon iconLiteral="fth-search" iconSize="16" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
      
      <!-- Container cho các bài ghim -->
      <VBox fx:id="pinnedPostsContainer" prefWidth="100.0" styleClass="pinned-posts-container">
         <children>
            <Label styleClass="section-title" text="Bài đăng ghim">
               <graphic>
                  <FontIcon iconLiteral="fth-star" iconSize="16" />
               </graphic>
            </Label>
            <FlowPane fx:id="pinnedPostsFlowPane" hgap="10.0" prefWidth="200.0" vgap="10.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
      
      <!-- Container cho danh sách bài đăng -->
      <VBox prefWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="section-title" text="Tất cả bài đăng">
               <graphic>
                  <FontIcon iconLiteral="fth-message-circle" />
               </graphic>
            </Label>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="500.0" styleClass="transparent-scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="postsContainer" prefWidth="910.0" spacing="10.0" />
               </content>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
      
      <!-- Loading indicator -->
      <HBox fx:id="loadingBox" alignment="CENTER" managed="false" prefHeight="100.0" prefWidth="200.0" visible="false">
         <children>
            <Label text="Đang tải bài đăng..." />
         </children>
      </HBox>
   </children>
</VBox>