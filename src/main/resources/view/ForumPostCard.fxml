<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="postCardContainer" alignment="CENTER_LEFT" maxWidth="910.0" prefWidth="910.0" styleClass="forum-post-card" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.anishelf.controller.ForumPostCardController">
   <children>
      <!-- Avatar author -->
      <StackPane alignment="CENTER" prefHeight="65.0" prefWidth="65.0">
         <children>
            <ImageView fx:id="authorAvatar" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <clip>
            <Circle radius="25.0" />
         </clip>
      </StackPane>
      
      <!-- Post content -->
      <VBox prefWidth="770.0" spacing="5.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="titleLabel" styleClass="post-title" text="Tiêu đề bài đăng" wrapText="true" />
            <Label fx:id="contentPreviewLabel" prefWidth="750.0" styleClass="post-content-preview" text="Đoạn nội dung ngắn của bài đăng..." wrapText="true" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <!-- Thông tin tác giả và thời gian -->
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <FontIcon iconLiteral="fth-user" iconSize="14" styleClass="post-meta-icon" />
                        <Label fx:id="authorLabel" styleClass="post-meta-text" text="Tên tác giả" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <FontIcon iconLiteral="fth-clock" iconSize="14" styleClass="post-meta-icon" />
                        <Label fx:id="timeLabel" styleClass="post-meta-text" text="2 giờ trước" />
                     </children>
                  </HBox>
                  
                  <!-- Tags -->
                  <FlowPane fx:id="tagsFlowPane" hgap="5.0" prefWidth="200.0" vgap="5.0" HBox.hgrow="ALWAYS" />
                  
                  <!-- Views and comments -->
                  <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <FontIcon iconLiteral="fth-eye" iconSize="14" styleClass="post-meta-icon" />
                              <Label fx:id="viewCountLabel" styleClass="post-meta-text" text="123" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <FontIcon iconLiteral="fth-message-circle" iconSize="14" styleClass="post-meta-icon" />
                              <Label fx:id="commentCountLabel" styleClass="post-meta-text" text="45" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>